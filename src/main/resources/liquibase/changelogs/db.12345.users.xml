<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="authorities tables" author="redin_d" logicalFilePath="db.12345.users">
        <createTable tableName="users_test">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR"/>
            <column name="phone" type="BIGINT"/>
            <column name="status" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="role" type="VARCHAR" defaultValue="ROLE_USER"/>
        </createTable>
    </changeSet>

    <changeSet id="add user" author="redin_d">
        <insert tableName="users_test">
            <column name="username" value="User"/>
            <column name="password" value="pass1"/>
            <column name="email" value="User email"/>
            <column name="phone" value="8911252525"/>
        </insert>
        <insert tableName="users_test">
            <column name="username" value="Admin"/>
            <column name="password" value="pass2"/>
            <column name="email" value="Admin email"/>
            <column name="phone" value="11111111"/>
        </insert>
    </changeSet>

</databaseChangeLog>